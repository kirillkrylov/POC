{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**", 
          "favicon.ico",
          "tests/unit/NF/HTML/*.{svg,html,htm,js,css}",
          "tests/unit/NF/History/*.xml",
          "tests/unit/N8/HTML/*.{svg,html,htm,js,css}",
          "tests/unit/N8/History/*.xml"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "creatio-tmpl"
    ],
    "globalMetadata": {
      "_appName": "POC for Tedom",
      "_appTitle": "POC for Tedom",
      "_enableSearch": true,
      "_appFaviconPath ": "favicon.ico",
      "_appLogoPath": "images/logo.png",
      "_appFooter": "This is my footer",
      "_gitContribute": {
        "repo": "https://github.com/CreatioRnDHub/POC_TEDOM.git",
        "branch": "doc-contribution"
      },
      "pdf": false
    }
  }
}